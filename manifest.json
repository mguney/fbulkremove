{
  "name": "Facebook Bulk Message Remover",
  "version": "1.0",
  "description": "Facebook Bulk Message Remover",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js","jquery.min.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Facebook Remove Messages",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}